{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "experimentalDecorators": true,
        "strict": true,
        "declaration": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es6", "dom"]
    }
}